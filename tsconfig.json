{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,

    // For Nest
    "experimentalDecorators": true,

    "isolatedModules": true,
    "module": "ES2015",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "types": ["vitest/importMeta"]
  },
  "include": ["src/**/*.ts", ".eslintrc.cjs"]
}
